


select utente.nome,utente.cognome,abbonamento.dal as inizio_validita ,abbonamento.al as fine_validita from utente join abbonamento on utente.id = abbonamento.utente;



 select stazione.nome,tornello.numero from stazione join tornello on tornello.stazione = stazione.id;





